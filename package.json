{
  "name": "petit-dom",
  "version": "0.0.1",
  "description": "Raw/minimalist virtual dom library",
  "main": "dist/petit-dom.min.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yelouafi/petit-dom.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yelouafi/petit-dom/issues"
  },
  "keywords": [
    "javascript",
    "virtual dom"
  ],
  "author": "Yassine ELOUAFI <yelouafi@gmail.com>",
  "dependencies": {
    "rollup": "^0.43.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "bundlesize": "^0.6.1",
    "eslint": "^3.19.0",
    "faucet": "0.0.1",
    "husky": "^0.13.3",
    "jsdom": "^11.1.0",
    "lint-staged": "^3.4.1",
    "prettier": "^1.5.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "tape": "^4.7.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint src test",
    "test": "bundlesize  && babel-node ./test | faucet",
    "check": "npm run lint && npm run test",
    "prepublish": "npm run build",
    "clean": "rimraf dist lib",
    "build:umd:dev": "rollup -w -c rollup.config.dev.js",
    "build:umd:prod": "rollup -c rollup.config.prod.js",
    "build": "npm run clean && npm run build:umd:dev && npm run build:umd:prod"
  },
  "lint-staged": {
    "*.js": [
      "check",
      "prettier --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/petit-dom.min.js",
      "threshold": "4 Kb"
    }
  ],
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
